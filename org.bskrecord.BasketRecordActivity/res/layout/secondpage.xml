<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/halfcourt" 
    android:orientation="vertical"
    android:gravity="center">

	<TextView android:id="@+id/menu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" 
	    android:gravity="center"
	    android:textColor="#FFFFFF"
	    android:textSize="36dp"
	    android:layout_marginTop="5dp"
	    android:text="主選單"/>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/btnAddname"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:onClick="addname"
        android:text="@string/buttonname1"
        android:layout_marginRight="30dp"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btnChangename"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:textColor="#000000"
        android:background="@drawable/button_style"
        android:onClick="changename"
        android:text="@string/buttonname2" />
</LinearLayout>  
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <Button
        android:id="@+id/btnChoose"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:onClick="choosecolor"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:text="球衣樣式" />
     <Button
        android:id="@+id/btnInformation"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:onClick="info"
        android:textColor="#000000"
        android:layout_marginRight="30dp"
        android:text="使用說明" />
     <Button
        android:id="@+id/btnBack"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/button_style"
        android:onClick="back"
        android:textColor="#000000"
        android:text="回首頁" />
</LinearLayout>   
</LinearLayout>
