<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="選擇球衣顏色"
        android:textSize="20dp" 
        android:layout_marginTop="5dp"/>
    
<RadioGroup android:id="@+id/options"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:garvity="center">   
		<RadioButton
            android:id="@+id/chooseblue"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BLUE" />
		<RadioButton
            android:id="@+id/choosered"
            android:layout_width="85dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="RED" />
		<RadioButton
            android:id="@+id/choosegreen"
            android:layout_width="85dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="GREEN" />
		<RadioButton
            android:id="@+id/choosewhite"
            android:layout_weight="1"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="WHITE" />
		<RadioButton
            android:id="@+id/chooseorange"
            android:layout_weight="1"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:text="ORANGE" />


</RadioGroup>

	<TableRow
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >

	    <ImageView
	        android:id="@+id/blook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/blue" />

	    <ImageView
	        android:id="@+id/rlook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/red2" />

	    <ImageView
	        android:id="@+id/glook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/green2" />

	    <ImageView
	        android:id="@+id/blalook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/white" />

	    <ImageView
	        android:id="@+id/olook"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_margin="2dp"
	        android:layout_weight="1"
	        android:background="#00000000"
	        android:src="@drawable/orange" />

	</TableRow>

	<TableLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content" >

</TableLayout>
    <Button android:id="@+id/backtomenu"
        android:layout_gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="回選單"/>

</LinearLayout>