<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center" 
    android:background="@drawable/court">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center">
        <Button
        android:id="@+id/newrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/newstyle"
        android:onClick="getNew" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center">

    <Button android:id="@+id/oldrecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/oldstyle"
        android:onClick="toOld"/>
    </LinearLayout>
    

</LinearLayout>