<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:gravity="center">
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:gravity="center">
        <TableLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="15"
		    >
			
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:gravity="center">
				<TextView android:id="@+id/clock"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    />
		    
			</TableRow>

			<TableRow
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" 
			    android:gravity="center">

				<Button
				    android:id="@+id/aFouladd"
				    android:layout_width="80dp"
				    android:layout_height="wrap_content"
				    android:onClick="afouladd"
				    android:text="犯規"/>

			</TableRow>
		    
		</TableLayout>
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:gravity="center"
            android:background="@drawable/txt">

            <TableRow
    	    	android:layout_width="match_parent"
    	    	android:layout_height="wrap_content" >

    	   		<TextView android:id="@+id/afoullight1"
    	       	  android:layout_width="match_parent"
    	       	  android:layout_height="wrap_content"
    	       	  android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
            	  android:text="1"/>
   			</TableRow>
   			<TableRow
   	    		android:layout_width="match_parent"   
   	    		android:layout_height="wrap_content" >

	    	   	<TextView android:id="@+id/afoullight2"
    	       	   android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	       	  android:layout_width="match_parent"
    	       	  android:layout_height="wrap_content"
            	  android:text="2"/>
   			</TableRow>
   			<TableRow
   	    		android:layout_width="match_parent"
   	    		android:layout_height="wrap_content" >
    	    	<TextView android:id="@+id/afoullight3"
    	       	   android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	       	  android:layout_width="wrap_content"
    	       	  android:layout_height="wrap_content"
    	       	  android:text="3"/>
    		</TableRow>
    		<TableRow
   	    		android:layout_width="match_parent"
   	    		android:layout_height="wrap_content" >
      	   		<TextView android:id="@+id/afoullight4"
    	       	   android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	       	  android:layout_width="wrap_content"
    	       	  android:layout_height="wrap_content"
            	  android:text="4"/>
   			</TableRow>
   			<TableRow
   	   			  android:layout_width="match_parent"
   	    		  android:layout_height="wrap_content" >
    			<TextView
    		      android:id="@+id/afoullight5"
    		   	  android:layout_width="wrap_content"
    		      android:layout_height="wrap_content"
    		   	   android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    		   	  android:text="5" />
   			</TableRow>
		</TableLayout>

		<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:layout_weight="10">

		    <TableRow android:layout_width="match_parent"
		    	  android:layout_height="match_parent"
		    	  android:background="@drawable/txt"
		    	  android:gravity="center">

		    	<TextView
		        android:id="@+id/ourteamname"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_gravity="center"
		        android:text="A" />

		     	<TextView
		         android:id="@+id/oppteamname"
		         android:layout_width="match_parent"
		         android:layout_height="wrap_content"
		         android:layout_gravity="center"
		         android:text="B" />

			</TableRow>		
		    	  
			<TableRow
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:background="@drawable/mainpage1"
		    android:gravity="center">
		     	

				<TextView
		    	android:id="@+id/ourscore"
		    	android:layout_width="90dp"
		    	android:layout_height="80dp"
		    	android:gravity="center"
		    	android:text="24"
		    	android:textSize="48sp" 
		    	/>
		
				<TextView
		    	android:id="@+id/oppscore"
		    	android:layout_width="90dp"
		   		android:layout_height="80dp"
		    	android:gravity="center"
		    	android:text="25"
		    	android:textSize="48sp" />
			</TableRow>
		</TableLayout>

		<TableLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" 
		    android:background="@drawable/txt"
		    android:layout_weight="1">

		    <TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >

    	    <TextView android:id="@+id/bfoullight1"
    	        	  android:layout_marginTop="2dp"
    	       		  android:layout_marginLeft="2dp"
    	       	 	  android:layout_marginRight="2dp"
    	        	  android:layout_width="wrap_content"
    	        	  android:layout_height="wrap_content"
    	        	  android:text="1"/>
    	</TableRow>
    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >

    	    <TextView android:id="@+id/bfoullight2"
    	        	  android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	        	  android:layout_width="wrap_content"
    	        	  android:layout_height="wrap_content"
    	        	  android:text="2"/>
    	</TableRow>
    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >

    	    <TextView android:id="@+id/bfoullight3"
    	        	  android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	        	  android:layout_width="wrap_content"
    	        	  android:layout_height="wrap_content"
    	        	  android:text="3"/>
    	</TableRow>
    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >

    	    <TextView android:id="@+id/bfoullight4"
    	        	 android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"
    	        	  android:layout_width="wrap_content"
    	        	  android:layout_height="wrap_content"
    	        	  android:text="4"/>
    	</TableRow>
    	<TableRow
    	    android:layout_width="match_parent"
    	    android:layout_height="wrap_content" >

    		<TextView
    		    android:id="@+id/bfoullight5"
    		    android:layout_width="wrap_content"
    		    android:layout_height="wrap_content"
    		   	android:text="5" 
    		   	android:layout_marginTop="2dp"
    	       	  android:layout_marginLeft="2dp"
    	       	  android:layout_marginRight="2dp"/>
		</TableRow>
		</TableLayout>
		<TableLayout 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_weight="5">

		    <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:gravity="center">

		        <Button
		            android:id="@+id/addone"
		            android:layout_width="50dp"
		            android:layout_height="wrap_content"
		            android:onClick="optsadd"
		            android:text="+1" />
		        <Button 
		            android:id="@+id/addtwo"
		    		android:onClick="addtw"
		       		android:text="+2"
		       		android:layout_width="50dp"
		       		android:layout_height="wrap_content"/>
				<Button 
				    android:id="@+id/addthree"
		    		android:onClick="addthr"
		    		android:text="+3"
		    		android:layout_width="50dp"
		       		android:layout_height="wrap_content"/>

		    </TableRow>

		    <TableRow
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:gravity="center">

		        <Button android:id="@+id/bFouladd"
		    		android:text="犯規"
		    		android:onClick="bfouladd"
		    		android:layout_width="wrap_content"
		   			android:layout_height="wrap_content"
		   			android:layout_span="2"/>
		    </TableRow>
		</TableLayout>
</LinearLayout>		
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <Button
        android:id="@+id/mainplayer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/blueplayer"
        android:text="13"
        android:textSize="50dp" />
    	<Button
    	    android:id="@+id/mainplayer2"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="3dp"
    	    android:background="@drawable/blueplayer"
    	    android:text="13"
    	    android:textSize="50dp" />

    	<Button
    	    android:id="@+id/mainplayer3"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="3dp"
    	    android:background="@drawable/blueplayer"
    	    android:text="13"
    	    android:textSize="50dp" />

    	<Button
    	    android:id="@+id/mainplayer4"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="3dp"
    	    android:background="@drawable/blueplayer"
    	    android:text="13"
    	    android:textSize="50dp" />

    	<Button
    	    android:id="@+id/mainplayer5"
    	    android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_margin="3dp"
    	    android:background="@drawable/blueplayer"
    	    android:text="13"
    	    android:textSize="50dp" />

</LinearLayout>
<TableRow android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/addscore"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="本節結束" 
		android:onClick="endquater"
		android:layout_weight="1"/>
    <Button android:id="@+id/gameover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="比賽結束"
        android:onClick="Gameover"
        android:layout_weight="1"/>
    <ImageButton
        android:id="@+id/btnundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:layout_marginRight="5dp"
        android:src="@drawable/undothird"
        android:onClick="undo" 
        android:layout_weight="1"/>
</TableRow>
</LinearLayout>
</ScrollView>